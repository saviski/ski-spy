{
  "compilerOptions": {
    "incremental": true,
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "dom",
      "es2020",
      "dom.iterable"
    ],
    "outDir": "js",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveSymlinks": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./types/**"
  ]
}